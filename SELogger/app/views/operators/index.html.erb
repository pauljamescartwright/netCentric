<p id="notice"><%= notice %></p>

<h1>Operators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Call sign</th>
      <th>Location</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.name %></td>
        <td><%= operator.call_sign %></td>
        <td><%= operator.location %></td>
        <td><%= @event %></td>
        <td><%= link_to 'Show', event_operator_path(:id => operator.id) %></td>
        <td><%= link_to 'Edit', edit_event_operator_path(:id => operator.id) %></td>
        <td><%= link_to 'Destroy', event_operator_path(:id => operator.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

